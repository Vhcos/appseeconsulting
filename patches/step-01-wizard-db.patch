+import { prisma } from "@/lib/prisma";
+import { redirect } from "next/navigation";
+
+function requireEnv(name: string): string {
+  const v = process.env[name];
+  if (!v) throw new Error(`Falta variable de entorno: ${name}`);
+  return v;
+}
+
+async function createEngagementAction(formData: FormData) {
+  "use server";
+
+  const name = String(formData.get("name") ?? "").trim();
+  if (!name) return;
+
+  const orgId = requireEnv("DEMO_ORG_ID");
+  const companyId = requireEnv("DEMO_COMPANY_ID");
+
+  await prisma.engagement.create({
+    data: {
+      orgId,
+      companyId,
+      name,
+    },
+  });
+
+  redirect("./wizard");
+}
+
+export default async function WizardPage() {
+  const orgId = process.env.DEMO_ORG_ID;
+  const companyId = process.env.DEMO_COMPANY_ID;
+
+  const canUseDb = Boolean(orgId && companyId);
+
+  const engagements = canUseDb
+    ? await prisma.engagement.findMany({
+        where: { orgId },
+        orderBy: { createdAt: "desc" },
+        take: 50,
+      })
+    : [];
+
+  return (
+    <main style={{ padding: 24, maxWidth: 900, margin: "0 auto" }}>
+      <h2 style={{ fontSize: 22, fontWeight: 700 }}>Wizard</h2>
+
+      {!canUseDb ? (
+        <div style={{ marginTop: 12, padding: 12, border: "1px solid #ddd", borderRadius: 12 }}>
+          <p style={{ margin: 0 }}>
+            Para activar el modo demo, define <code>DEMO_ORG_ID</code> y{" "}
+            <code>DEMO_COMPANY_ID</code> en tu <code>.env</code> (local) y en Vercel.
+          </p>
+        </div>
+      ) : (
+        <>
+          <form action={createEngagementAction} style={{ marginTop: 16, display: "flex", gap: 8 }}>
+            <input
+              name="name"
+              placeholder="Nombre del Engagement (por ejemplo: Diagnóstico Enero 2026)"
+              style={{
+                flex: 1,
+                padding: "10px 12px",
+                borderRadius: 10,
+                border: "1px solid #ccc",
+              }}
+            />
+            <button
+              type="submit"
+              style={{
+                padding: "10px 14px",
+                borderRadius: 10,
+                border: "1px solid #111",
+                cursor: "pointer",
+              }}
+            >
+              Crear
+            </button>
+          </form>
+
+          <h3 style={{ marginTop: 18, fontSize: 16, fontWeight: 700 }}>Engagements</h3>
+          <ul style={{ paddingLeft: 18, marginTop: 8 }}>
+            {engagements.map((e) => (
+              <li key={e.id}>
+                <strong>{e.name}</strong> — {e.status} — {new Date(e.createdAt).toLocaleString()}
+              </li>
+            ))}
+          </ul>
+        </>
+      )}
+    </main>
+  );
+}
