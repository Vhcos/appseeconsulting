enum NpsInviteStatus {
  DRAFT
  SENT
  DELIVERED
  BOUNCED
  OPENED
  RESPONDED
  CANCELED
}

enum NpsReason {
  CONTROL_OPERATIVO
  PERFORMANCE_CAMINOS
  DATA_REPORTABILIDAD
  SEGURIDAD_HSEC
  RESPUESTA_EQUIPO
  OTRO
}

enum NpsFocus {
  MAYOR_PRESENCIA_EN_TERRENO
  MEJOR_TECNOLOGIA_INNOVACION
  MAS_DATOS_INSIGHTS
  GESTION_ADMINISTRATIVA
  MANTENER_ESTANDAR
}

model NpsInvite {
  id          String          @id @default(cuid())

  // Metadata opcional (por si luego lo amarras a org/cliente/engagement)
  orgId        String?
  companyId    String?
  engagementId String?

  // üëá nuevo: set de preguntas para "encuesta completa"
  questionSetId String?
  questionSet   QuestionSet? @relation(fields: [questionSetId], references: [id], onDelete: SetNull)

  // üëá nuevo: segmentaci√≥n opcional
  faenaId String?
  faena   Faena? @relation(fields: [faenaId], references: [id], onDelete: SetNull)

  unitId String? // AccountPlanRow.id
  unit   AccountPlanRow? @relation(fields: [unitId], references: [id], onDelete: SetNull)

  semesterKey String
  email       String
  fullName    String?
  token       String          @unique
  inviteUrl   String?

  status      NpsInviteStatus @default(SENT)
  sentAt      DateTime        @default(now())
  openedAt    DateTime?
  respondedAt DateTime?

  expiresAt   DateTime?

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  responses NpsResponse[]
  answers   Answer[]        // üëà nuevo: respuestas "completas" v√≠a Answer.npsInviteId

  engagement Engagement? @relation(fields: [engagementId], references: [id], onDelete: SetNull)

  @@index([semesterKey])
  @@index([email])
  @@index([engagementId])
  @@index([questionSetId])
  @@index([faenaId])
  @@index([unitId])
}

model NpsResponse {
  id          String     @id @default(cuid())

  inviteId    String     @unique
  invite      NpsInvite  @relation(fields: [inviteId], references: [id], onDelete: Cascade)

  score       Int
  reason      NpsReason?
  focus       NpsFocus?
  comment     String?

  submittedAt DateTime   @default(now())
  ipHash      String?
  userAgent   String?

  @@index([submittedAt])
}
